  <!-- Modificateur de r√©ponses pour ajouter des emojis -->
  
  <category>
    <pattern>EMOJI_DEBUT</pattern>
    <template><srai>$EMOJI_GENERAL</srai> </template>
  </category>
  
  <category>
    <pattern>EMOJI_FIN</pattern>
    <template> <srai>$EMOJI_GENERAL</srai></template>
  </category>
  
  <category>
    <pattern>EMOJI_DEUX</pattern>
    <template><srai>$EMOJI_GENERAL</srai> <star /> <srai>$EMOJI_GENERAL</srai></template>
  </category>
  
  <category>
    <pattern>EMOJI_ALEATOIRE</pattern>
    <template>
      <random>
        <li><srai>EMOJI_DEBUT</srai><star /></li>
        <li><star /><srai>EMOJI_FIN</srai></li>
        <li><srai>EMOJI_DEBUT</srai><star /><srai>EMOJI_FIN</srai></li>
        <li><star /></li>
      </random>
    </template>
  </category>
  
  <!-- R√®gle pour injecter automatiquement des emojis dans toutes les r√©ponses -->
  <category>
    <pattern>INJECTER_EMOJI *</pattern>
    <template>
      <think>
        <set name="message"><star /></set>
        <set name="longueur"><srai>LONGUEUR <get name="message" /></srai></set>
      </think>
      <condition name="longueur">
        <li value="COURT"><srai>EMOJI_ALEATOIRE <get name="message" /></srai></li>
        <li><srai>EMOJI_PHRASES <get name="message" /></srai></li>
      </condition>
    </template>
  </category>
  
  <category>
    <pattern>LONGUEUR *</pattern>
    <template>
      <think>
        <set name="test"><star /></set>
        <set name="mots">0</set>
        <set var="texte"><star /></set>
        <!-- Compter approximativement le nombre de mots -->
        <condition var="texte">
          <li value=""></li>
          <li>
            <set name="mots"><map name="successor"><get name="mots" /></map></set>
            <set var="texte"><srai>RESTE <get var="texte" /></srai></set>
            <loop />
          </li>
        </condition>
      </think>
      <condition name="mots">
        <li value="0">VIDE</li>
        <li value="1">COURT</li>
        <li value="2">COURT</li>
        <li value="3">COURT</li>
        <li value="4">COURT</li>
        <li value="5">COURT</li>
        <li>LONG</li>
      </condition>
    </template>
  </category>
  
  <category>
    <pattern>RESTE *</pattern>
    <template>
      <regex pattern=" (.*)" match="\1">
        <star />
      </regex>
    </template>
  </category>
  
  <category>
    <pattern>EMOJI_PHRASES *</pattern>
    <template>
      <think>
        <set name="texte"><star /></set>
        <set name="resultat"></set>
        
        <!-- S√©parer par phrases et ajouter des emojis -->
        <condition name="texte">
          <li value=""></li>
          <li>
            <set var="phrase"><srai>PREMIERE_PHRASE <get name="texte" /></srai></set>
            <set var="reste"><srai>RESTE_PHRASES <get name="texte" /></srai></set>
            
            <set name="resultat"><get name="resultat" /> <srai>EMOJI_ALEATOIRE <get var="phrase" /></srai></set>
            <set name="texte"><get var="reste" /></set>
            <loop />
          </li>
        </condition>
      </think>
      <get name="resultat" />
    </template>
  </category>
  
  <category>
    <pattern>PREMIERE_PHRASE *</pattern>
    <template>
      <regex pattern="(.*?[.!?]) ?" match="\1">
        <star />
      </regex>
    </template>
  </category>
  
  <category>
    <pattern>RESTE_PHRASES *</pattern>
    <template>
      <regex pattern=".*?[.!?] ?(.*)" match="\1">
        <star />
      </regex>
    </template>
  </category>
